###############################################################################
# Definitions
###############################################################################
FOLDER_ROOT=..
FOLDER_BUILD=../build

###############################################################################
# Modules
###############################################################################
MODULES=edit_bpm_distance \
        edit_column \
        edit_dp
        
SRCS=$(addsuffix .cpp, $(MODULES))
OBJS=$(addprefix $(FOLDER_BUILD)/, $(SRCS:.cpp=.o))

###############################################################################
# Rules
###############################################################################
all: $(OBJS)

# General building rule
$(FOLDER_BUILD)/%.o : %.cpp
	$(CC) $(CC_FLAGS) -I$(FOLDER_ROOT) -c $< -o $@
	
